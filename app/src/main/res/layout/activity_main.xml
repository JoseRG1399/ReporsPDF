<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="@color/pantone_rosa"
    tools:context=".MainActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comercializadora saron shekina S.A de C.V"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes de mantenimiento: Refrigeracion"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        />

    <Spinner
        android:id="@+id/spinner_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:spinnerMode="dialog"
        />



    <EditText
        android:id="@+id/txtEquipo"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Equipo"
        android:textSize="14dp"

        />


    <EditText
        android:id="@+id/txtComentario"
        android:layout_width="344dp"
        android:layout_height="154dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Descripcion del mantenimietno"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/txtFirma"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Firma"
        />


    <Button
        android:id="@+id/btnFirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:text="Firmar reporte" />

    <Button
        android:id="@+id/btnCrearPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="Generar reporte" />


</LinearLayout>