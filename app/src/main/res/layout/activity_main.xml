<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="@drawable/style_background"
    tools:context=".MainActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comercializadora saron shekina S.A de C.V"
        android:textAlignment="center"
       android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="17dp"
        />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@mipmap/ic_rosa_saron"

        />


    <Spinner
        android:id="@+id/spinner_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:spinnerMode="dialog"
        android:background="@drawable/component_resource"
        android:padding="10dp"
        android:textAlignment="center"
        />



    <EditText
        android:id="@+id/txtEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Equipo"
        android:background="@drawable/component_resource"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"

        />


    <EditText
        android:id="@+id/txtComentario"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Descripcion del mantenimietno"
        android:textAlignment="center"
        android:background="@drawable/component_resource"
        android:padding="7dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtFirma"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:background="@drawable/component_resource"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:hint="Firma electronica"
        />


    <Button
        android:id="@+id/btnFirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:text="Firmar reporte" />

    <Button
        android:id="@+id/btnCrearPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="Generar reporte" />


</LinearLayout>